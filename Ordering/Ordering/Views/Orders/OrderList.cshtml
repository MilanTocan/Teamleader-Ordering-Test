@model IEnumerable<Ordering.Models.Order>

@{
    Layout = null;
}
<tbody>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <span id="Details_@item.ID" class="btn btn-default" data-url="@Url.Action("Details", "Orders")" data-target="@item.ID">Details</span>
                <span id="Edit_@item.ID" class="btn btn-primary" data-url="@Url.Action("Edit", "Orders")" data-target="@item.ID">Edit</span>
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</tbody>